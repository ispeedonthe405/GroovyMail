<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
  <Design.PreviewWith>
	  <Border Padding="5">
		  <StackPanel Spacing="5" Width="500" Height="500">
			  <TextBlock Text="TextBlock"/>
			  <TextBox Width="200" Text="TextBox"/>
			  <AutoCompleteBox Width="200" Text="AutoCompleteBox"/>
			  <ComboBox Width="200">
				  <ComboBoxItem>12345</ComboBoxItem>
				  <ComboBoxItem>12345</ComboBoxItem>
				  <ComboBoxItem>12345</ComboBoxItem>
				  <ComboBoxItem>12345</ComboBoxItem>
				  <ComboBoxItem>12345</ComboBoxItem>
			  </ComboBox>
			  <Button Content="Button" Width="70"/>
			  <ToggleButton Content="ToggleButton" Width="120"/>
			  <StackPanel Orientation="Horizontal">
				  <RadioButton Content="Radio1" Width="120"/>
				  <RadioButton Content="Radio2" Width="120"/>
			  </StackPanel>
			  <ToggleSwitch Width="120"/>
			  <CheckBox Content="CheckBox"/>
			  <DatePicker/>
			  <CalendarDatePicker/>
		  </StackPanel>
	  </Border>	  
  </Design.PreviewWith>


	<Style Selector="AutoCompleteBox">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="5,2,0,0"/>
	</Style>
	<Style Selector="Button">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="5,2,5,0"/>
	</Style>
	<Style Selector="ToggleButton">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="5,2,5,0"/>
	</Style>
	<!--<Style Selector="RadioButton">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalContentAlignment" Value="Center"/>
		<Setter Property="VerticalContentAlignment" Value="Center"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="0,5,0,0"/>
	</Style>-->
	<Style Selector="ComboBox">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="5,2,0,0"/>
	</Style>
	<!--<Style Selector="Expander">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>-->
	<Style Selector="TextBlock">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Left"/>
	</Style>
	<Style Selector="TextBox">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
		<Setter Property="HorizontalAlignment" Value="Stretch"/>
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="Padding" Value="5,2,0,0"/>
	</Style>
	<Style Selector="NumericUpDown">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	<Style Selector="Label">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	<Style Selector="StackPanel">
		<Setter Property="IsTabStop" Value="False"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	<Style Selector="CalendarDatePicker">
		<Setter Property="MinHeight" Value="24"/>
		<Setter Property="Height" Value="24"/>
		<Setter Property="VerticalAlignment" Value="Center"/>
	</Style>
	<Style Selector="DataGridColumnHeader">
		<Setter Property="MinHeight" Value="16"/>
		<Setter Property="Height" Value="16"/>
	</Style>
	<Style Selector="DataGridRow">
		<Setter Property="Height" Value="18"/>
	</Style>
	<Style Selector="DataGrid">
		<Setter Property="IsReadOnly" Value="True"/>
		<Setter Property="CanUserReorderColumns" Value="False"/>
		<Setter Property="CanUserResizeColumns" Value="False"/>
		<Setter Property="AutoGenerateColumns" Value="True"/>
		<Setter Property="SelectionMode" Value="Single"/>
	</Style>
	<Style Selector="DataGrid /template/ ScrollBar#PART_HorizontalScrollbar">
		<Setter Property="AllowAutoHide" Value="False"/>
	</Style>
	<Style Selector="DataGrid /template/ ScrollBar#PART_VerticalScrollbar">
		<Setter Property="AllowAutoHide" Value="False"/>
	</Style>
	<Style Selector="DataGrid /template/ DataGridRowsPresenter#PART_RowsPresenter">
		<Setter Property="Grid.RowSpan" Value="1" />
		<Setter Property="Grid.ColumnSpan" Value="3" />
	</Style>
	<Style Selector="DataGridRow[IsSelected=True]">
		<Setter Property="Foreground" Value="#505050"/>
	</Style>
	
</Styles>
